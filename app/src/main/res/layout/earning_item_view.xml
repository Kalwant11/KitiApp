<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="72dp">

    <TextView
        android:background="@drawable/earning_date_bg"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/date"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:padding="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/date"
        android:id="@+id/month_year"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:layout_toEndOf="@+id/month_year"
        android:id="@+id/adType"
        android:textColor="#f2212121"
        android:text="Video Ad"
        android:gravity="center_vertical|end"
        android:textSize="20sp"
        android:paddingStart="16dp"
        android:paddingEnd="36dp"
        android:layout_toStartOf="@+id/earnedAmount"
        android:layout_width="match_parent"
        android:layout_height="72dp" />

    <TextView
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:id="@+id/earnedAmount"
        android:layout_width="72dp"
        android:layout_height="72dp" />

</RelativeLayout>